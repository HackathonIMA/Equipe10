@model SMC.WebApi.Models.MuralModel
    

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    <div class="row">
        <div class="col-md-10">
            <h1>Criar novo comunicado</h1><br/><br/>
            <form>
                <div class="form-group">
                    <label for="exampleInputEmail1">Título do comunicado</label>
                    <input type="email" class="form-control" id="exampleInputEmail1" placeholder="Título do comunicado..">
                </div><br/>
                <textarea class="form-control" rows="6" placeholder="Digite aqui a mensagem do comunicado..."></textarea> <br /><br/>
                <div class="form-group">
                    <label for="exampleInputFile">Inserir arquivos</label>
                    <input type="file" id="exampleInputFile">
                </div><br/>

                <a href="home.html"><button type="submit" class="btn btn-default">Criar comunicado</button></a>
            </form>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
